<main>
  <div class= "container">
    <div class= "row">
      <div class= "col-md-3">
       <%= render 'layouts/userform', user:@user %>

       <%= render 'layouts/bookform', book:@book %>

      </div>
      <div class= "col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class= "table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan= "3"></th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
              <%= link_to user_path(book.user.id) do %>
              <div><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></div>
              <% end %>
              </td>
              <td>
              <%= link_to book_path(book.id) do %>
              <div><%= book.title %></div>
              <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
