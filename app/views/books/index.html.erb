<h1>New book</h1>
<%= form_with model:@book, local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create book'%>
<% end %>

<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <p><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <p><%= book.title %></p>
  <p><%= book.body %></p>
</div>
<% end %>