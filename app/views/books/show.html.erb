<main>
  <div class= "container">
    <div class= "row">
      <div class= "col-md-3">
       <%= render 'layouts/userform', user:@user %>

       <%= render 'layouts/bookform', book:@book %>

      </div>
      <div class= "col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class= "table">
          <tbody>
            <tr>
              <td>
               <%= link_to user_path(@books.user.id) do %>
               <div><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></div>
               <div><%= @books.user.name %><div>
               <% end %>
              </td>
              <td><%= @books.title %></td>
              <td><%= @books.body %></td>
              <% if @user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@books.id) %></td>
              <td><%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm" => "本当に削除しますか？"%></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

