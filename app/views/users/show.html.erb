<main>
  <div class= "container">
    <div class= "row">
      <div class= "col-md-3">
       <h2>User info</h2>
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:'jpeg', fallback: "no_image.jpg" %>
       <table class="table">
         <tbody>
           <tr></tr>
           <tr>
             <th>name</th>
             <th><%= @user.name %></th>
           </tr>
           <tr>
             <th>introduction</th>
             <th><%= @user.introduction %></th>
           </tr>
         </tbody>
       </table>
       <% if @user.id == current_user.id %>
       <div class= "row"><%= link_to "プロフィール編集", edit_user_path(@user) %></div>
       <% end %>
       <h2>New book</h2>
       <%= form_with model:@book, local:true do |f| %>
       <div class= "form_group">
         <div class= "book_title">Title</div> <!--labelからdivに変更-->
         <%= f.text_field :title %>
       </div>
       <div class= "form_group">
         <div class= "book_opinion">Opinion</div> <!--labelからdivに変更-->
         <%= f.text_area :body %>
       </div>
       <div class= "form_group">
         <%= f.submit 'Create book'%>
       </div>
       <% end %>
      </div>
      <div class= "col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class= "table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan= "3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                <div><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></div>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                <div><%= book.title %></div>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
<%= paginate @books %> <!--ここに置いていいのか-->

