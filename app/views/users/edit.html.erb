<main>
  <div class= "container">
    <div class= "row">
      <div class= "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h2>User info</h2>
       <% if @user.errors.any? %>
       <% user_errors = @user.errors.count %>
       <% if user_errors == 1 %>
       <%= @user.errors.count %> error prohibited this obj from being saved:
       <% else %>
       <%= @user.errors.count %> errors prohibited this obj from being saved:
       <% end %>
       <p><% @user.errors.full_messages.each do |message|%></p>
       <%= message %>
       <% end %>
       <% end %>

       <%= form_with model:@user, local:true do |f| %>
       <div class= "form_group">
         <div class= "user_name">Name</div>
         <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name" %>
       </div>
       <div class= "form_group">
         <div class= "user_image">Image</div>
         <%= f.attachment_field :profile_image, placeholder:"Image" %>
       </div>
       <div class= "form_group">
         <div class= "user_introduction">Introduction</div>
         <%= f.text_area :introduction, autofocus: true %>
       </div>
       <div class= "form_group">
        <%= f.submit "Update User" %>
       </div>
       <% end %>
      </div>
    </div>
  </div>
</main>
